{
  "manifest_version": 2,

  "name": "__MSG_extension_name__",
  "short_name": "__MSG_extension_short_name__",

  "description": "__MSG_extension_description__",
  "version": "1.1.1",
  "author": "Leo Nikkil√§",

  "permissions": ["storage", "notifications", "tabs", "chrome://favicon/"],

  "default_locale": "en",

  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "/html/popup.html",
    "default_title": "__MSG_extension_name__",
    "default_icon": {
      "19": "/images/icon/icon-19.png",
      "38": "/images/icon/icon-38.png"
    }
  },

  "commands": {
    "activeTabIntoPanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+9"
      },
      "description": "Turn active tab into a panel"
    },
    "activePanelIntoTab": {
      "global": true,
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "Turn active panel into a tab; needs to be global"
    }
  },

  "icons": {
    "19":  "/images/icon/icon-19.png",
    "38":  "/images/icon/icon-38.png",
    "48":  "/images/icon/icon-48.png",
    "128": "/images/icon/icon-128.png"
  },

  "content_security_policy": "script-src 'self' https://www.facebook.com https://platform.twitter.com https://plusone.google.com https://apis.google.com; object-src 'self'"
}
